<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Profile.AdminApp.ViewModels"
             xmlns:m="clr-namespace:Profile.Models;assembly=Profile.Models"
             x:Class="Profile.AdminApp.Pages.ExperienceStatsPage"
             x:DataType="vm:ExperienceStatsViewModel"
             Title="Experience Stats">

    <CollectionView ItemsSource="{Binding Items}"
                    Footer="{Binding ToAdd}">

        <CollectionView.ItemTemplate>
            <DataTemplate x:DataType="m:ExperenceStat">
                <Grid RowDefinitions="30, 40, 60, 30, 40, 60">

                    <Label Text="Label" />
                    <Entry Grid.Row="1"
                           Text="{Binding Label}" />

                    <Label Grid.Row="3"
                           Text="Year Started" />
                    <Entry Grid.Row="4"
                           Text="{Binding YearStarted}"
                           Keyboard="Numeric" />


                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>

        <CollectionView.FooterTemplate>
            <DataTemplate x:DataType="m:ExperenceStat">

            </DataTemplate>
        </CollectionView.FooterTemplate>
        
    </CollectionView>
    
</ContentPage>