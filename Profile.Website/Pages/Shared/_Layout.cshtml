<!DOCTYPE html>
<html>
<head>
    @{
        string title = "Neville Nazerane";
        if (ViewData.ContainsKey("Title"))
        {
            title = $"{ViewData["Title"]} - {title}";
        }
    }
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

