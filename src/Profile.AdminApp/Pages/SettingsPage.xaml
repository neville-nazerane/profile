<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Profile.AdminApp.ViewModels"
             x:Class="Profile.AdminApp.Pages.SettingsPage"
             x:DataType="vm:SettingsViewModel"
             Title="Settings">

    <Grid RowDefinitions="50, *, 50"
          Padding="20">

        <!--Form-->
        <Grid Grid.Row="1"
              RowDefinitions="40, 50">

            <Label Text="Container Key" 
                   FontSize="Medium"
                   FontAttributes="Bold" />

            <Entry Grid.Row="1"
                   Text="{Binding Key}"
                   IsPassword="True" />

        </Grid>


        <Button Grid.Row="2"
                Command="{Binding SaveCommand}"
                Text="Save" />
    </Grid>
    
</ContentPage>