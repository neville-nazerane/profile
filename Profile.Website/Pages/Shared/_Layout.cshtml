    <link rel="stylesheet" href="https://bootswatch.com/4/minty/bootstrap.min.css" />

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" />
    </environment>
</head>
<body>

    <h1 class="text-center">Neville Nazerane</h1>
    <h3 class="text-center">Web Applications Developer</h3>

    @*<ul class="nav nav-pills nav-justified nav-contents">
        <li class="nav-item">
            <page-nav class="nav-link" asp-page="skills">Skills</page-nav>
        </li>
        <li class="nav-item">
            <page-nav class="nav-link" asp-page="links">Profile links</page-nav>
        </li>
        <li class="nav-item">
            <page-nav class="nav-link" asp-page="projects">Web Projects</page-nav>
        </li>
    </ul>*@

