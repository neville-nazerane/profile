<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Profile.AdminApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Profile.AdminApp"
    xmlns:pages="clr-namespace:Profile.AdminApp.Pages"
    Shell.FlyoutBehavior="{OnIdiom Desktop=Locked, Default=Flyout}">

    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate pages:SettingsPage}"
        Route="settings" />

    <ShellContent
        Title="Personal Info"
        ContentTemplate="{DataTemplate pages:PersonalInfoPage}"
        Route="personalInfo" />

    <ShellContent
        Title="Experience"
        ContentTemplate="{DataTemplate pages:ExperienceStatsPage}"
        Route="experience" />

    <ShellContent
        Title="Skill Info"
        ContentTemplate="{DataTemplate pages:SkillInfoPage}"
        Route="skillinfo" />

    <ShellContent
        Title="Work Resume"
        ContentTemplate="{DataTemplate pages:WorkResumeItemsPage}"
        Route="resumeWork" />

    <ShellContent
        Title="Education Resume"
        ContentTemplate="{DataTemplate pages:EducationResumeItemPage}"
        Route="resumeEducation" />

</Shell>
